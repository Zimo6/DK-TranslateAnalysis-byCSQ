<?xml version="1.0" encoding="utf-8"?>

<!--bv xiawenwen add for wizard 20210406-->

<resources>

    <dimen name="setup_wizard_divider_size">1dp</dimen>

    <style name="SetupWizardPrivacyStyle" parent="Theme.Settings">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="SetupWizardPrivacyContentStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#1e1e1e</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">7dp</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="SetupWizardPrivacyTitleStyle" parent="SetupWizardPrivacyContentStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginBottom">7dp</item>
    </style>

    <style name="SetupWizardLicenseContentStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#1e1e1e</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:lineSpacingExtra">7dp</item>
        <item name="android:paddingBottom">9dp</item>
    </style>

    <style name="SetupWizardLicenseTitleStyle" parent="SetupWizardLicenseContentStyle">
        <item name="android:layout_weight">2</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
